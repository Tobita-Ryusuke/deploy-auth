{
  "version": 2,
  "functions": {
    "test/api/**/*.js": { "runtime": "nodejs18.x" }
  },
  "routes": [
    { "src": "/signup",     "dest": "test/api/signup/index.js" },
    { "src": "/users/(.*)", "dest": "test/api/users/[user_id].js" },
    { "src": "/close",      "dest": "test/api/close/index.js" }
  ]
}